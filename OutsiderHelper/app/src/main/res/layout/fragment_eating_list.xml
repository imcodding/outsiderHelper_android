<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/eating_list_padding_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_eating_list"
            android:layout_width="@dimen/eating_img_width_height"
            android:layout_height="@dimen/eating_img_width_height"
            android:scaleType="centerCrop"
            android:src="@drawable/e_no_image_1" />

        <TextView
            android:id="@+id/txt_eating_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="아비꼬"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12dp" />
    </LinearLayout>
</RelativeLayout>