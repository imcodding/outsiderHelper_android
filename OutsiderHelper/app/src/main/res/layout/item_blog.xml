<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_blog_relative_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bg_dark"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/item_blog_iv_thumbnail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_blog_tv_blogName"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/item_blog_iv_thumbnail" />

        <TextView
            android:id="@+id/item_blog_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_blog_tv_blogName"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/item_blog_iv_thumbnail"
            android:textColor="#0C43B7"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_blog_tv_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_blog_tv_title"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/item_blog_iv_thumbnail"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:maxLines="2" />

        <TextView
            android:id="@+id/item_blog_tv_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/item_blog_tv_blogName" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b4b4b4"
        android:layout_below="@+id/item_blog_relative_all"/>
</RelativeLayout>