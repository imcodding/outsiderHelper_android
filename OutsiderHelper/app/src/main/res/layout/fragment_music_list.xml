<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_music_rank"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:gravity="right"/>

        <ImageView
            android:id="@+id/img_music_image"
            android:layout_width="@dimen/music_img_size"
            android:layout_height="@dimen/music_img_size"
            android:paddingVertical="@dimen/music_img_padding_vertical"
            android:src="@drawable/e_no_image_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_music_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/music_txt_margin"
                    android:layout_toLeftOf="@+id/img_music_heart"
                    android:text="제목" />

                <ImageView
                    android:id="@+id/img_music_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/music_img_heart_margin_right"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/h_heart" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_music_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_music_title"
                android:layout_marginLeft="@dimen/music_txt_margin"
                android:text="이름"
                android:textColor="#b4b4b4"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/h_mt_10_line_2" />
</LinearLayout>