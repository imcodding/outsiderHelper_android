<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_board_rel_height"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/row_board_rel_padding_horizontal"
        android:layout_marginVertical="@dimen/row_board_rel_padding_vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_board_hits"
            android:text="혼자 밥 먹어요"
            android:textSize="@dimen/row_board_title_txt_size" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_board_hits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/board_nickname_hits_color"
            android:textSize="@dimen/row_board_hits_txt_size" />

        <LinearLayout
            android:id="@+id/linear_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_board_title"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_board_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/row_board_txt_margin_right"
                android:text="하몬인" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_board_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/row_board_txt_margin_right"
                android:text="2019.09.20" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_board_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후 02:10" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/h_mt_10_line_2" />
</LinearLayout>