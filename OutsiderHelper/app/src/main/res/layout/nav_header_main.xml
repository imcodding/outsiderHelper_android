<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/storeCategoryBackground"
    android:gravity="bottom"
    android:paddingHorizontal="30dp"
    android:paddingTop="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:id="@+id/relative_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_nav_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/a_main_image"
            app:siBorderWidth="0.1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_nav_user"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/txt_nav_user_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/img_nav_user"
                android:layout_weight="1"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:textColor="@android:color/black"
                android:text="osh123"
                android:gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/txt_user_nick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/img_nav_user"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:text="파덕파덕" />

            <TextView
                android:id="@+id/txt_user_university"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:text="대학교" />

            <TextView
                android:id="@+id/txt_user_age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="@android:color/black"
                android:text="나이" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
