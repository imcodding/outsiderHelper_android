<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingVertical="@dimen/img_title_padding_vertical"
        android:src="@drawable/game_top_10" />

    <ImageView
        android:id="@+id/game_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_game_title"
        android:src="@drawable/h_mt_10_line_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/game_line"
        android:paddingHorizontal="30dp"
        android:paddingVertical="@dimen/game_recycler_padding_vertical"/>
</RelativeLayout>